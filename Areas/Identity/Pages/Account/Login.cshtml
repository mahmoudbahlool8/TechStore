@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="container">
    <form id="account" method="post">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="~/images/logo.jpg" class="img-fluid" alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <h4>@ViewData["Title"]</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Email input -->
                    <div class="form-outline my-4">
                        <label class="form-label" asp-for="Input.Username">Username</label>
                        <input asp-for="Input.Username" autocomplete="username" aria-required="true" class="form-control form-control-lg"
                               placeholder="Enter Username" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" asp-for="Input.Password">Password</label>
                        <input type="password" asp-for="Input.Password" autocomplete="current-password" aria-required="true" class="form-control form-control-lg"
                                placeholder="Enter password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-body">Forgot password?</a>

                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-50">Login</button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-danger">Register</a>
                        </p>
                    </div>            
                </div>
            </div>
        </div>
    </form>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
